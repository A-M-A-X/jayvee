{
  "name": "open-data-language",
  "scopeName": "source.open-data-language",
  "fileTypes": [
    ".odl"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.open-data-language",
      "match": "\\b(as|CSVTable|default|export|extends|File|from|Http|import|inputs|Integer|library|outputs|pipe|pipeline|RelationalDatabase|requires|SchemaGuard|sink|source|step|String|TableSelection|to|typeof|valuetype)\\b"
    },
    {
      "name": "string.quoted.double.open-data-language",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.open-data-language",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.open-data-language"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.open-data-language"
        }
      ]
    }
  }
}