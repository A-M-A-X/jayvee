{
  "name": "jayvee",
  "scopeName": "source.jayvee",
  "fileTypes": [
    ".jv"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.jayvee",
      "match": "\\b(block|boolean|column|CSVFileExtractor|database|decimal|from|header|host|integer|layout|LayoutValidator|oftype|password|pipe|pipeline|port|PostgresLoader|requires|row|table|text|to|url|username)\\b"
    },
    {
      "name": "string.quoted.double.jayvee",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.jayvee",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.jayvee"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.jayvee"
        }
      ]
    }
  }
}