{
  "name": "jayvee",
  "scopeName": "source.jayvee",
  "fileTypes": [
    ".jv"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.jayvee",
      "match": "\\b(block|boolean|cell|column|decimal|from|header|integer|layout|oftype|pipe|pipeline|range|requires|row|text|to)\\b"
    },
    {
      "name": "string.quoted.double.jayvee",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.jayvee",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.jayvee"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.jayvee"
        }
      ]
    }
  }
}